{
    "name": "nody",
    "version": "1.0.0",
    "main": "index.js",
    "private": true,
    "repository": "https://github.com/GuilhermeCunha/nody.git",
    "author": "Guilherme <guiscunha@gmail.com>",
    "license": "MIT",
    "scripts": {
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "test": "turbo run test",
        "build:package": "turbo run build:package",
        "format": "prettier --write \"{packages,services}/**/*.{ts,js,css,html, yml}\""
    },
    "pre-commit": [
        "lint"
    ],
    "workspaces": {
        "packages": [
            "packages/**"
        ]
    },
    "turbo": {
        "baseBranch": "origin/main",
        "pipeline": {
            "build:package": {
                "dependsOn": [
                    "^build:package"
                ],
                "outputs": [
                    "dist"
                ]
            },
            "test": {
                "dependsOn": [
                    "^build:package"
                ],
                "outputs": []
            },
            "lint": {
                "outputs": []
            },
            "format": {
                "outputs": []
            },
            "lint:fix": {
                "outputs": []
            },
            "dev": {
                "cache": false
            }
        }
    },
    "devDependencies": {
        "@types/dotenv-safe": "^8.1.2",
        "@types/faker": "5.5.3",
        "@types/jest": "^27.0.2",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "faker": "5.5.3",
        "glob": "^7.2.0",
        "jest": "^27.3.1",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "turbo": "^1.0.10",
        "typescript": "^4.4.4"
    }
}
